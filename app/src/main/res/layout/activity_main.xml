<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#213555"
    android:orientation="horizontal"
>
    <TextView
        android:id="@+id/Summation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:layout_above="@+id/Input"
        android:layout_alignParentStart="true"

        android:background="#27667B"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins_medium"
        android:textSize="18sp"
        android:letterSpacing="0.05"
        android:paddingHorizontal="24dp"
        android:gravity="center_vertical"
    />


    <EditText
        android:id="@+id/Input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="30dp"
        android:inputType="number"
        android:layout_above="@+id/ButtonLayout"

        android:background="#27445D"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins_medium"
        android:textSize="22sp"
        android:letterSpacing="0.05"
        android:paddingHorizontal="24dp"
    />

    <RelativeLayout
        android:id="@+id/ButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_margin="20dp"
    >
        <!-- INITIAL [00, 0, ., =] -->
        <Button
            android:id="@+id/Clear"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="C"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_margin="8dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_bg"
            android:textColor="#A9D9D4"
        />

        <Button
            android:id="@+id/Backspace"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="⌫"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/Clear"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:textColor="#A9D9D4"
        />

        <Button
            android:id="@+id/Percentage"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="%"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/Backspace"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:textColor="#A9D9D4"
        />

        <Button
            android:id="@+id/Division"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="÷"
            android:fontFamily="@font/poppins_medium"
            android:textSize="17sp"
            android:layout_toEndOf="@+id/Percentage"
            android:layout_margin="8dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_bg"
            android:textColor="#A9D9D4"
        />

        <!-- SECOND ROW [7, 8, 9, x] -->
        <Button
            android:id="@+id/Seven"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="7"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_below="@+id/Clear"
            android:layout_margin="8dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_bg"
            android:textColor="@android:color/white"
        />

        <Button
            android:id="@+id/Eight"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="8"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/Seven"
            android:layout_below="@+id/Clear"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:textColor="@android:color/white"
        />

        <Button
            android:id="@+id/Nine"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="9"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/Eight"
            android:layout_below="@+id/Percentage"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:textColor="@android:color/white"
        />

        <Button
            android:id="@+id/Multiply"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="×"
            android:fontFamily="@font/poppins_medium"
            android:textSize="19sp"
            android:layout_toEndOf="@+id/Nine"
            android:layout_below="@+id/Division"
            android:layout_margin="8dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_bg"
            android:textColor="#A9D9D4"
        />

        <!-- THIRD ROW [4, 5, 6, -] -->
        <Button
            android:id="@+id/Four"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="4"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_below="@+id/Seven"
            android:layout_margin="8dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_bg"
            android:textColor="@android:color/white"
        />

        <Button
            android:id="@+id/Five"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="5"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/Four"
            android:layout_below="@+id/Eight"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:textColor="@android:color/white"
        />

        <Button
            android:id="@+id/Six"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="6"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/Five"
            android:layout_below="@+id/Nine"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:textColor="@android:color/white"
        />

        <Button
            android:id="@+id/Subtraction"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="-"
            android:fontFamily="@font/poppins_medium"
            android:textSize="19sp"
            android:layout_toEndOf="@+id/Six"
            android:layout_below="@+id/Multiply"
            android:layout_margin="8dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_bg"
            android:textColor="#A9D9D4"
        />

        <!-- FOURTH ROW [1, 2, 3, +] -->
        <Button
            android:id="@+id/One"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="1"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_below="@+id/Four"
            android:layout_margin="8dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_bg"
            android:textColor="@android:color/white"
        />

        <Button
            android:id="@+id/Two"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="2"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/One"
            android:layout_below="@+id/Five"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:textColor="@android:color/white"
        />

        <Button
            android:id="@+id/Three"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="3"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/Two"
            android:layout_below="@+id/Six"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:textColor="@android:color/white"
        />

        <Button
            android:id="@+id/Addition"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="+"
            android:fontFamily="@font/poppins_medium"
            android:textSize="19sp"
            android:layout_toEndOf="@+id/Three"
            android:layout_below="@+id/Subtraction"
            android:layout_margin="8dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_bg"
            android:textColor="#A9D9D4"
        />

        <!-- FIFTH ROW [1, 2, 3, +] -->
        <Button
            android:id="@+id/SquareRoot"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="√"
            android:fontFamily="@font/poppins_medium"
            android:textSize="19sp"
            android:layout_below="@+id/One"
            android:layout_margin="8dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_bg"
            android:textColor="#A9D9D4"
        />

        <Button
            android:id="@+id/Zero"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="0"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/SquareRoot"
            android:layout_below="@+id/Two"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:textColor="@android:color/white"
        />

        <Button
            android:id="@+id/Dot"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="."
            android:fontFamily="@font/poppins_medium"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/Zero"
            android:layout_below="@+id/Three"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:textColor="@android:color/white"
        />

        <Button
            android:id="@+id/Equal"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:text="="
            android:fontFamily="@font/poppins_medium"
            android:textSize="19sp"
            android:layout_toEndOf="@+id/Dot"
            android:layout_below="@+id/Addition"
            android:layout_margin="8dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_bg"
            android:textColor="#A9D9D4"
        />
    </RelativeLayout>
</RelativeLayout>